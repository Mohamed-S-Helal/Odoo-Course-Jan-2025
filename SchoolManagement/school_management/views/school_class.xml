<odoo>
    <data>

        <record id="class_view_tree" model="ir.ui.view">
            <field name="name">class_view_tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree string="class_tree" editable="top">
                    <field name="name"/>
                    <field name="school_id" options="{'no_open':True}"/>
                </tree>
            </field>
        </record>


        <record id="school_class_action" model="ir.actions.act_window">
            <field name="name">Class</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.class</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>



